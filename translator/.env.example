# Flask Application Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_DEBUG=False

# =============================================================================
# Model Paths
# =============================================================================
SENTENCE_MODEL_PATH=sentence_model.h5
SENTENCE_LABELS_PATH=sentence_labels.txt
ALPHABET_MODEL_PATH=alphabet_model.h5
ALPHABET_LABELS_PATH=alphabet_labels.txt

# =============================================================================
# Camera Configuration
# =============================================================================
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# =============================================================================
# Detection Configuration
# =============================================================================
# Smoothing window size (frames)
# Lower = faster response, higher = more stable predictions
SMOOTHING_WINDOW_SIZE=5

# Confidence threshold (0.0 to 1.0)
# Lower = more predictions, higher = fewer false positives
CONFIDENCE_THRESHOLD=0.6

# Default engine on startup
# Options: 'sentence' or 'alphabet'
DEFAULT_ENGINE=sentence

# =============================================================================
# Translation Configuration
# =============================================================================
# Default translation language (ISO 639-1 code)
DEFAULT_LANGUAGE=es

# Enable/disable translation feature
TRANSLATION_ENABLED=True

# Enable/disable TTS feature
TTS_ENABLED=True

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=5000
THREADED=True

# =============================================================================
# Performance Tuning
# =============================================================================
# TensorFlow GPU memory growth
TF_GPU_MEMORY_GROWTH=True

# TensorFlow log level (0=all, 1=info, 2=warning, 3=error)
TF_CPP_MIN_LOG_LEVEL=2

# OpenCV thread count (0=auto)
CV_NUM_THREADS=0

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable detection on startup
DETECTION_ENABLED_ON_STARTUP=True

# Enable video feed status overlay
SHOW_STATUS_OVERLAY=True

# Enable prediction confidence display
SHOW_CONFIDENCE=True

# =============================================================================
# API Rate Limiting (optional, requires Flask-Limiter)
# =============================================================================
RATELIMIT_ENABLED=False
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=memory://

# =============================================================================
# CORS Configuration (optional, requires Flask-CORS)
# =============================================================================
CORS_ENABLED=False
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# Development/Debug Settings
# =============================================================================
# Show detailed error pages
PROPAGATE_EXCEPTIONS=True

# Preserve context on exceptions
PRESERVE_CONTEXT_ON_EXCEPTION=True

# =============================================================================
# Security Settings
# =============================================================================
# Session cookie settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF protection
WTF_CSRF_ENABLED=False

# =============================================================================
# Notes
# =============================================================================
# - In production, always use HTTPS (SESSION_COOKIE_SECURE=True)
# - Generate a strong SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# - Adjust SMOOTHING_WINDOW_SIZE and CONFIDENCE_THRESHOLD based on your models
# - For GPU systems, ensure TF_GPU_MEMORY_GROWTH=True to prevent OOM errors
# - Enable rate limiting in production to prevent abuse
